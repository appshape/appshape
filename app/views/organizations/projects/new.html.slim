- breadcrumb :new_organization_project, @organization
= render partial: 'shared/site_top_bar', locals: { title: 'New Project' }

.row
  .col-lg-12
    .wrapper.wrapper-content.animated.fadeInUp
      .ibox.float-e-margins
        .ibox-title
          h5 Create project
        .ibox-content
          = simple_form_for [@organization, @project], url: organization_projects_path, method: :post, html: {class: 'form-horizontal'}do |f|
            = f.input :name, required: true, wrapper: :horizontal_form_v2
            .hr-line-dashed
            .form-group
              .col-sm-4.col-sm-offset-2
                = f.submit 'Create', class: 'button btn btn-primary'